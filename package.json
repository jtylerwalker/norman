{
  "name": "norman",
  "version": "0.0.1",
  "description": "Library that normalizes json for consumption",
  "main": "index.js",
  "scripts": {
    "test": "jest --watchAll --notify",
    "lint": "eslint \"./**/*.js\"",
    "lint:style": "node ./node_modules/stylelint/bin/stylelint.js \"**/*.{css,scss}\"",
    "manage-translations": "node ./lokalize/tasks/translation-runner.js",
    "precommit": "lint-staged",
    "prettier": "prettier \"src/**/*.{js,jsx,ts,tsx,css,less,scss,json,gql,md}\" --write"
  },
  "author": "Tyler Walker",
  "license": "ISC",
  "dependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "@babel/register": "^7.0.0",
    "babel-plugin-dynamic-import-node": "^2.2.0",
    "jest": "^23.6.0"
  },
  "jest": {
    "testMatch": [
      "**/__tests__/**/*.?(m)js?(x)",
      "**/?(*.)(spec|test).?(m)js?(x)"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx",
      "node",
      "mjs"
    ]
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          [
            "es2015",
            {
              "modules": false
            }
          ]
        ],
        "plugins": [
          [
            "transform-es2015-modules-commonjs",
            {
              "spec": true
            }
          ]
        ]
      }
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "npm run lint -- --fix",
      "git add"
    ],
    "*.{jsx,ts,tsx,css,less,scss,json,gql,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{css,scss}": [
      "npm run lint:style -- --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-eslint": "8",
    "babel-jest": "^23.6.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "babel-preset-es2015": "^6.24.1",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "eslint": "4.x",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-prettier": "^3.0.0",
    "prettier": "^1.14.2"
  }
}
